generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x", "windows", "darwin", "darwin-arm64"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  role          String   @default("user") // Changed from enum to String for SQLite
  walletAddress String?  @map("wallet_address")
  balance       Int      @default(0)
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  sentTransactions     Transaction[] @relation("sender")
  receivedTransactions Transaction[] @relation("receiver")

  @@map("users")
}

model Transaction {
  id                String   @id @default(uuid())
  senderId          String   @map("sender_id")
  receiverId        String   @map("receiver_id")
  amount            Int
  type              String   // Changed from enum to String for SQLite
  blockchainTxHash  String?  @map("blockchain_tx_hash")
  createdAt         DateTime @default(now()) @map("created_at")

  sender   User @relation("sender", fields: [senderId], references: [id])
  receiver User @relation("receiver", fields: [receiverId], references: [id])

  @@map("transactions")
}
